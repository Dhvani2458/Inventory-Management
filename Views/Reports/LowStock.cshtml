@model List<_360_InventoryApp.Models.Product>
<div class="container mt-4">
    <h2 class="text-danger">Low Stock Products</h2>
    @if (Model.Count == 0)
    {
        <div class="alert alert-success">No products are currently low in stock.</div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr><th>ID</th><th>SKU</th><th>Name</th><th>Stock</th></tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.SKU</td>
                        <td>@item.Name</td>
                        <td>@item.Stock</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <a href="/Home/Index" class="btn btn-link mt-3">Back to Home</a>
</div>
